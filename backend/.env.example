# ============================================
# APPLICATION SETTINGS
# ============================================
APP_NAME=RIM - Sistema Inteligente de Moto
APP_VERSION=1.0.0
APP_ENV=development  # development | staging | production
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production-min-32-chars
ADMIN_SECRET_KEY=admin-secret-key-for-demo-panel-change-me

# ============================================
# DATABASE (PostgreSQL)
# ============================================
DATABASE_URL=postgresql+asyncpg://rim_user:rim_password_2024@localhost:5432/rim_db
# Para Docker: postgresql+asyncpg://rim_user:rim_password_2024@postgres:5432/rim_db

# ============================================
# REDIS (Cache & Pub/Sub)
# ============================================
REDIS_URL=redis://:rim_redis_pass_2024@localhost:6379/0
# Para Docker: redis://:rim_redis_pass_2024@redis:6379/0
REDIS_CACHE_TTL=3600  # 1 hora en segundos

# ============================================
# OLLAMA (LLM Local)
# ============================================
OLLAMA_BASE_URL=http://localhost:11434
# Para Docker: http://ollama:11434
OLLAMA_MODEL=llama3.1:8b  # Modelo a usar (llama3.1:8b, mistral, phi3, etc.)
OLLAMA_TIMEOUT=120  # Timeout en segundos

# ============================================
# JWT AUTHENTICATION
# ============================================
JWT_SECRET_KEY=jwt-secret-key-change-in-production-must-be-secure
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================
# CORS (Frontend URLs permitidas)
# ============================================
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","http://127.0.0.1:3000"]
CORS_ALLOW_CREDENTIALS=True

# ============================================
# API SETTINGS
# ============================================
API_V1_PREFIX=/api/v1
DOCS_URL=/docs
REDOC_URL=/redoc

# ============================================
# WEBSOCKET
# ============================================
WS_HEARTBEAT_INTERVAL=30  # Ping cada 30 segundos
WS_MAX_CONNECTIONS_PER_USER=5

# ============================================
# MACHINE LEARNING
# ============================================
ML_MODELS_PATH=src/ml/trained_models
ML_PREDICTION_THRESHOLD=0.85  # Umbral para predicciones (85%)
ML_ENABLE_GPU=False  # Usar GPU si está disponible

# ============================================
# SENSORES & IoT
# ============================================
SENSOR_READING_INTERVAL=5  # Segundos entre lecturas
SENSOR_ANOMALY_THRESHOLD_TEMP=90  # °C
SENSOR_ANOMALY_THRESHOLD_VIBRATION=3.0  # g
SENSOR_ANOMALY_THRESHOLD_BATTERY=11.5  # V

# ============================================
# SUSCRIPCIONES (Freemium/Premium)
# ============================================
TRIAL_DURATION_DAYS=7
PREMIUM_MONTHLY_PRICE=9.99
PREMIUM_ANNUAL_PRICE=99.99
ENABLE_TRIAL=True
MAX_TRIALS_PER_USER=1

# ============================================
# NOTIFICACIONES
# ============================================
NOTIFICATION_RETRY_ATTEMPTS=3
NOTIFICATION_QUEUE_SIZE=1000

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=INFO  # DEBUG | INFO | WARNING | ERROR | CRITICAL
LOG_FORMAT=json  # json | text
LOG_FILE_PATH=logs/rim.log
LOG_USE_LOGURU=False  # true to enable loguru as logging backend

# ============================================
# MONITORING (Opcional)
# ============================================
# SENTRY_DSN=your-sentry-dsn-here
# ENABLE_METRICS=True

# ============================================
# EMAIL (Para notificaciones - Futuro)
# ============================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# EMAIL_FROM=noreply@rim-system.com

# ============================================
# DEVELOPMENT TOOLS
# ============================================
ENABLE_HOT_RELOAD=True
ENABLE_SWAGGER_UI=True